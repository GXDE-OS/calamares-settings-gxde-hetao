#!/bin/bash
#
# Writes the final sources.list file
#
CHROOT=$(mount | grep proc | grep calamares | awk '{print $3}' | sed -e "s#/proc##g")
RELEASE="crimson"

cat << EOF > $CHROOT/etc/apt/sources.list
deb https://mirrors.cernet.edu.cn/deepin/beige $RELEASE main commercial community
# deb-src https://mirrors.cernet.edu.cn/deepin/beige $RELEASE main commercial community
EOF

exit 0
